{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "jquery": true
  },
  "extends": [
    "semistandard",
    "plugin:jsdoc/recommended",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "import/no-cycle": "error",
    "no-unused-vars": [
      "error",
      {
        "args": "none",
        "caughtErrors": "none",
        "ignoreRestSiblings": true,
        "vars": "all",
        "varsIgnorePattern": "jsx"
      }
    ]
  },
  "ignorePatterns": [
    "lib/",
    "dist/"
  ]
}
