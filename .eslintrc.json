{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "jquery": true
  },
  "extends": [
    "semistandard",
    "plugin:jsdoc/recommended",
    "plugin:import/recommended"
  ],
  "plugins": [
    "mozilla"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "import/no-cycle": "error",
    "mozilla/reject-top-level-await": "warn"
  },
  "ignorePatterns": [
    "lib/"
  ]
}
