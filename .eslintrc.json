{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "jquery": true
  },
  "extends": [
    "semistandard",
    "plugin:jsdoc/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "node/no-callback-literal": "off",
    "jsdoc/require-hyphen-before-param-description": [ "error", "always" ]
  },
  "ignorePatterns": [
    "lib/"
  ]
}
