{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "jquery": true
  },
  "extends": [
    "semistandard",
    "plugin:jsdoc/recommended",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "import/no-cycle": "error"
  },
  "overrides": [
    {
      "files": ["src/utils/inject/**", "src/features/quote_replies/**"],
      "rules": {
        "jsdoc/require-jsdoc": "off"
      }
    }
  ],
  "ignorePatterns": [
    "lib/"
  ]
}
