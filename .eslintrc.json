{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "jquery": true
  },
  "extends": [
    "semistandard",
    "plugin:jsdoc/recommended",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "import/no-cycle": "error",
    "jsdoc/require-jsdoc": [
      "warn",
      {
        "publicOnly": true,
        "contexts": [
          ":not([id.name=\"main\"], [id.name=\"clean\"], [id.name=\"onStorageChanged\"]) > :matches(FunctionExpression, ArrowFunctionExpression)"
        ]
      }
    ]
  },
  "ignorePatterns": [
    "lib/"
  ]
}
