{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "module": "esnext",
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "types": ["@types/webextension-polyfill", "@types/jquery"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "src/lib/**/*"
  ],
}
