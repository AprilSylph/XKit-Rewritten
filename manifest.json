{
  "manifest_version": 2,
  "name": "XKit Rewritten",
  "version": "0.1.0",

  "short_name": "XKit",
  "author": "April Sylph",
  "homepage_url": "https://github.com/AprilSylph/XKit-Rewritten",

  "description": "Rewrite of XKit, the extension framework for Tumblr",
  "icons": {
    "16": "img/icon/16.png",
    "32": "img/icon/32.png",
    "48": "img/icon/48.png",
    "64": "img/icon/64.png",
    "96": "img/icon/96.png",
    "128": "img/icon/128.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "XKit",
    "default_popup": "src/browser/action.html",
    "default_icon": {
      "16": "img/icon/16.png",
      "32": "img/icon/32.png",
      "48": "img/icon/48.png",
      "64": "img/icon/64.png",
      "96": "img/icon/96.png",
      "128": "img/icon/128.png"
    }
  },

  "permissions": [ "storage" ],
  "web_accessible_resources": [ "src/*.js", "src/*.css" ],
  "content_scripts": [
    {
      "matches": [ "*://www.tumblr.com/*" ],
      "run_at": "document_idle",
      "js": [
        "lib/browser-polyfill.min.js",
        "lib/jquery.min.js",
        "lib/moment.min.js",
        "src/fake-import.js",
        "src/xkit.js"
      ]
    }
  ],

  "minimum_chrome_version": "55",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a2"
    }
  }
}
