{
  "manifest_version": 2,
  "name": "XKit Rewritten",
  "short_name": "XKit",
  "description": "Rewrite of XKit, the extension framework for Tumblr",
  "version": "0.1.0",
  "author": "April Sylph",
  "homepage_url": "https://github.com/AprilSylph/XKit-Rewritten",
  "permissions": [ "storage" ],
  "web_accessible_resources": [ "src/*.js" ],
  "content_scripts": [
    {
      "matches": [ "*://www.tumblr.com/*" ],
      "run_at": "document_idle",
      "js": [
        "lib/browser-polyfill.min.js",
        "lib/jquery.min.js",
        "lib/moment.min.js",
        "src/fake-import.js",
        "src/xkit.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "52.0a2"
    }
  }
}
