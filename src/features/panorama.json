{
  "title": "Panorama",
  "description": "Widescreen dashboard",
  "icon": {
    "class_name": "ri-align-justify",
    "color": "white",
    "background_color": "#1a2735"
  },
  "help": "https://github.com/AprilSylph/XKit-Rewritten/wiki/Features#panorama",
  "preferences": {
    "mainEnable": {
      "label": "Widen the main post column",
      "type": "checkbox",
      "default": true
    },
    "communitiesEnable": {
      "label": "Widen Tumblr Community columns",
      "type": "checkbox",
      "default": true
    },
    "patioEnable": {
      "label": "Widen Tumblr Patio columns",
      "type": "checkbox",
      "default": true
    },
    "maxPostWidth": {
      "label": "Max. post width",
      "type": "select",
      "options": [
        { "value": "640px", "label": "640px" },
        { "value": "800px", "label": "800px" },
        { "value": "960px", "label": "960px" },
        { "value": "1120px", "label": "1120px" },
        { "value": "1280px", "label": "1280px" },
        { "value": "1440px", "label": "1440px" },
        { "value": "1600px", "label": "1600px" },
        { "value": "100wv", "label": "Unlimited" }
      ],
      "default": "800px"
    },
    "expandPostMedia": {
      "label": "Expand media content in wide posts",
      "type": "checkbox",
      "default": true
    }
  }
}
