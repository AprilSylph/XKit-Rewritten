{
  "title": "Timestamps",
  "description": "See when a post was made",
  "icon": {
    "class_name": "ri-time-line",
    "color": "white",
    "background_color": "#d2196d"
  },
  "help": "https://github.com/AprilSylph/XKit-Rewritten/wiki/Features#timestamps",
  "preferences": {
    "alwaysShowYear": {
      "type": "checkbox",
      "label": "Show the year on current-year datestamps",
      "default": false
    },
    "headerTimestamps": {
      "type": "checkbox",
      "label": "Show extra verbose timestamps in post headers",
      "default": false
    },
    "isoFormat": {
      "type": "checkbox",
      "label": "Use ISO 8601 format for verbose timestamps",
      "default": false
    },
    "reblogTimestamps": {
      "type": "select",
      "label": "Reblog Timestamps",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "op", "label": "Only on original post" },
        { "value": "all", "label": "On all reblog items" }
      ],
      "default": "op"
    }
  },
  "deprecated": true
}
