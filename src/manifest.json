{
  "manifest_version": 2,
  "name": "XKit Rewritten",
  "version": "0.3.3",

  "short_name": "XKit",
  "author": "April Sylph",
  "homepage_url": "https://github.com/AprilSylph/XKit-Rewritten#readme",

  "description": "The enhancement suite for Tumblr's new web interface",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "XKit",
    "default_popup": "browser_action/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "96": "icons/96.png",
      "128": "icons/128.png"
    }
  },

  "permissions": [ "storage" ],
  "web_accessible_resources": [ "*.js", "*.json", "*.css" ],
  "content_scripts": [
    {
      "matches": [ "*://www.tumblr.com/*" ],
      "run_at": "document_idle",
      "js": [
        "lib/browser-polyfill.min.js",
        "lib/jquery.min.js",
        "content_scripts/main.js"
      ],
      "css": [
        "content_scripts/sidebar.css",
        "content_scripts/control_buttons.css",
        "content_scripts/notifications.css"
      ]
    }
  ],

  "minimum_chrome_version": "71",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "89.0a1"
    }
  }
}
