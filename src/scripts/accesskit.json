{
  "title": "AccessKit",
  "description": "Accessibility options for Tumblr",
  "icon": {
    "class_name": "ri-open-arm-line",
    "color": "white",
    "background_color": "#df46f6"
  },
  "preferences": {
    "disable_gifs": {
      "type": "checkbox",
      "label": "Pause GIFs until they are hovered over",
      "default": false
    },
    "boring_tag_chiclets": {
      "type": "checkbox",
      "label": "De-animate the \"You're caught up\" carousel",
      "default": false
    },
    "blue_links": {
      "type": "checkbox",
      "label": "Make links in posts blue",
      "default": false
    },
    "no_user_colours": {
      "type": "checkbox",
      "label": "Remove user-set colours from text in posts",
      "default": false
    },
    "no_user_fonts": {
      "type": "checkbox",
      "label": "Remove user-set fonts from text in posts",
      "default": false
    },
    "visible_alt_text": {
      "type": "checkbox",
      "label": "Show alt text as captions below images",
      "default": false
    }
  }
}
