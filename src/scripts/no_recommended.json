{
  "title": "No Recommended",
  "description": "Focus only on what you follow",
  "note": "Most recommended posts are controlled from your Tumblr dashboard settings.",
  "icon": {
    "class_name": "ri-delete-row",
    "color": "white",
    "background_color": "#00cf35"
  },
  "help": "https://github.com/AprilSylph/XKit-Rewritten/wiki/Features#no-recommended",
  "preferences": {
    "hide_recommended_posts": {
      "type": "checkbox",
      "label": "Hide recommended posts on the dashboard",
      "default": true
    },
    "hide_answertime": {
      "type": "checkbox",
      "label": "Hide the answertime banner",
      "default": false
    },
    "hide_blog_carousels": {
      "type": "checkbox",
      "label": "Hide recommended blogs between posts",
      "default": false
    },
    "hide_tag_carousels": {
      "type": "checkbox",
      "label": "Hide recommended tags between posts",
      "default": false
    },
    "hide_lightbox_related": {
      "type": "checkbox",
      "label": "Hide related posts in the photo lightbox",
      "default": false
    },
    "hide_recommended_blogs": {
      "type": "checkbox",
      "label": "Hide recommended blogs in the sidebar",
      "default": false,
      "inherit": "tweaks.preferences.hide_recommended_blogs"
    },
    "hide_radar": {
      "type": "checkbox",
      "label": "Hide the Tumblr Radar",
      "default": false,
      "inherit": "tweaks.preferences.hide_radar"
    }
  }
}
