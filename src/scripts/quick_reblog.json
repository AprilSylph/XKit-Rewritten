{
  "title": "Quick Reblog",
  "icon": {
    "class_name": "ri-repeat-line",
    "color": "white",
    "background_color": "#acd53a"
  },
  "preferences": {
    "popupPosition": {
      "type": "select",
      "label": "Popup position",
      "options": {
        "above": "Above reblog button",
        "below": "Below reblog button"
      },
      "default": "below"
    },
    "showBlogSelector": {
      "type": "checkbox",
      "label": "Show the blog selector",
      "default": true
    },
    "showCommentInput": {
      "type": "checkbox",
      "label": "Show the comment field",
      "default": false
    },
    "quickTagsIntegration": {
      "type": "checkbox",
      "label": "Enable integration with Quick Tags",
      "default": true
    },
    "showTagsInput": {
      "type": "checkbox",
      "label": "Show the tags field",
      "default": true
    },
    "alreadyRebloggedEnabled": {
      "type": "checkbox",
      "label": "Remember which posts I've already reblogged",
      "default": true
    },
    "alreadyRebloggedLimit": {
      "type": "select",
      "label": "Remember the last ",
      "options": {
        "100": "100 posts",
        "1000": "1000 posts",
        "10000": "10,000 posts"
      },
      "default": "100"
    }
  }
}
