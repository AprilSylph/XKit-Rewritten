{
  "title": "Quick Reblog",
  "icon": {
    "class_name": "ri-repeat-line",
    "color": "white",
    "background_color": "#acd53a"
  },
  "preferences": {
    "popupPosition": {
      "type": "select",
      "label": "Popup position",
      "options": [
        { "value": "above", "label": "Above reblog button" },
        { "value": "below", "label": "Below reblog button" }
      ],
      "default": "below"
    },
    "showBlogSelector": {
      "type": "checkbox",
      "label": "Show the blog selector",
      "default": true
    },
    "rememberLastBlog": {
      "type": "checkbox",
      "label": "Remember the last selected blog in the popup",
      "default": false
    },
    "showCommentInput": {
      "type": "checkbox",
      "label": "Show the comment field",
      "default": false
    },
    "quickTagsIntegration": {
      "type": "checkbox",
      "label": "Enable integration with Quick Tags",
      "default": true
    },
    "showTagsInput": {
      "type": "checkbox",
      "label": "Show the tags field",
      "default": true
    },
    "alreadyRebloggedEnabled": {
      "type": "checkbox",
      "label": "Remember which posts I've already reblogged",
      "default": true
    },
    "alreadyRebloggedLimit": {
      "type": "select",
      "label": "Remember the last ",
      "options": [
        { "value": "100", "label": "100 posts" },
        { "value": "1000", "label": "1000 posts" },
        { "value": "10000", "label": "10,000 posts" }
      ],
      "default": "100"
    }
  }
}
