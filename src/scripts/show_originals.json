{
  "title": "Show Originals",
  "description": "Hide reblogged posts on the dashboard",
  "icon": {
    "class_name": "ri-focus-line",
    "color": "white",
    "background_color": "#598c75"
  },
  "help": "https://github.com/AprilSylph/XKit-Rewritten/wiki/Features#show-originals",
  "preferences": {
    "showOwnReblogs": {
      "type": "checkbox",
      "label": "Show my own reblogs",
      "default": true
    },
    "showReblogsWithContributedContent": {
      "type": "checkbox",
      "label": "Show reblogs with contributed content",
      "default": true
    },
    "whitelistedUsernames": {
      "type": "textarea",
      "label": "Blogs to show reblogs from (comma-separated)",
      "default": ""
    },
    "runOnDashboard": {
      "type": "checkbox",
      "label": "Run on the dashboard",
      "default": true
    },
    "runOnPeepr": {
      "type": "checkbox",
      "label": "Run on the blog view drawer",
      "default": false
    },
    "runOnBlogSubscriptions": {
      "type": "checkbox",
      "label": "Run in \"Your Blog Subscriptions\"",
      "default": false
    }
  }
}
