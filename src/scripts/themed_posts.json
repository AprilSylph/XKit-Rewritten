{
  "title": "Themed Posts",
  "description": "Use users' theme colors for posts",
  "icon": {
    "class_name": "ri-palette-line",
    "color": "white",
    "background_color": "peru"
  },
  "help": "https://github.com/AprilSylph/XKit-Rewritten/wiki/Features#themed-posts",
  "preferences": {
    "reblogTrailTheming": {
      "type": "checkbox",
      "label": "Theme every reblog trail item individually",
      "default": false
    },
    "enableOnPeepr": {
      "type": "checkbox",
      "label": "Enable theming on the blog view",
      "default": false
    },
    "blacklistedUsernames": {
      "type": "textarea",
      "label": "Disable theming on these blogs (comma-separated)",
      "default": ""
    },
    "missingPostMode": {
      "type": "select",
      "label": "Disabled/deleted blog theming",
      "options": [
        { "value": "palette", "label": "default/palette color" },
        { "value": "outer_post", "label": "inherit reblogging blog's theme" }
      ],
      "default": "palette"
    }
  }
}
